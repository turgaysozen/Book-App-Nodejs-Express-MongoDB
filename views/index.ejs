<h2 class="page-header">Recently Added
    <label style="float: right; font-size: 18px; margin-top: 30px; margin-right: 15px;"><b>Total: <%= books.length%> books</b></label>
</h2>
<div>
    <%let i = 0;%>
    <% books.forEach(book => { %>
    <%i++%>
    <div class="book-row">
        <center>
            <a href="/books/<%= book.id%>"><%= book.title%>
                <img src="<%= book.coverImagePath%>">
            </a>
            <label>Publish Date: <%=  book.publishDate.toISOString().split('T')[0]%></label>
        </center>
    </div>
    <%})%>
</div>